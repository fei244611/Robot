<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.feifei.robot.activity.ChatActivity">

    <TextView android:text="@string/tv_recognizer" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_recognizer"/>
    <TextView
        android:text="@string/tv_result"
        android:id="@+id/tv_result"
        android:layout_below="@id/tv_recognizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@id/tv_result"
        android:text="@string/btn_recognizer"
        android:id="@+id/btn_recognizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
